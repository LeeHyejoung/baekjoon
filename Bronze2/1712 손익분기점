#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void)
{
	int a, b, c;
	long long result;

	scanf("%d %d %d", &a, &b, &c);

	if (c - b != 0) {
		result = a / (c - b) + 1;
	}
	else {
		result = -1;
	}

	if (result < 0) {
		printf("-1\n");
	}
	else {
		printf("%lld\n", result);
	}

	return 0;
}
